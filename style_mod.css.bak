
/* Emergency layout fixes: remove topbar and large top gap */
.topbar{display:none !important;}
.page-content{margin-top:0 !important; padding-top:6px !important;}
.safe{padding-top:12px !important;}
.container{padding-top:0 !important;}
.phone{margin-top:0 !important;}


/* Safe bottom nav and page content fixes */
.bottom-nav, .app-nav, .bottom-nav[role] { position: fixed; left:50%; transform:translateX(-50%); bottom:12px; z-index:9999; background:#fff; padding:10px 20px; border-radius:12px; box-shadow:0 8px 30px rgba(0,0,0,0.06); }
.container { display:flex; justify-content:center; align-items:flex-start; padding:20px; box-sizing:border-box; }
.phone { margin: 0 auto; }
.safe { padding-bottom:160px !important; padding-top:20px !important; box-sizing:border-box; }
.top-nav, .app-top { display:none !important; }

body, html { margin:0; padding:0; }

/* Cleaned mod styles */
.top-nav{display:flex;align-items:center;gap:12px;padding:10px;background:linear-gradient(180deg,#ffffffcc,#f0f9ff);border-bottom:1px solid #e6f1f8;position:sticky;top:0;z-index:9999}
.top-links{display:none;gap:10px;align-items:center}
.top-links a{padding:8px 10px;border-radius:8px;background:#fff;text-decoration:none}
.menu-btn{font-size:20px;padding:6px 8px;border-radius:8px;background:#fff;border:1px solid #ddd}
.xp-row{padding:10px 0;border-bottom:1px solid #f0f0f0}
.xp-bar-wrap{height:8px;background:#eee;border-radius:6px;margin-top:8px;overflow:hidden}
.xp-bar{height:100%;border-radius:6px}
.xp-totals{padding-top:10px}
.feed-list{display:flex;flex-direction:column;gap:8px}
.feed-item img{max-width:100%;border-radius:8px}
.timer-display{font-size:44px;text-align:center;margin:18px 0}
.timer-controls{padding:10px}
#timer-progress-wrap{height:10px;background:#eee;border-radius:8px;overflow:hidden;margin-bottom:8px}
#timer-progress-bar{height:100%;width:0%;background:linear-gradient(90deg,#7CE3C4,#9BE7FF)}
#motivation-box{position:fixed;right:18px;bottom:120px;background:#fff;padding:10px;border-radius:8px;box-shadow:0 6px 24px rgba(0,0,0,0.12);opacity:0;transition:all .25s}
#motivation-box.show{opacity:1;transform:translateY(-6px)}
.focus-lock{position:fixed;left:0;right:0;top:56px;background:#fff4;backdrop-filter:blur(6px);padding:8px;text-align:center}
.ar-modal{position:fixed;left:0;top:0;right:0;bottom:0;background:rgba(0,0,0,0.6);display:flex;align-items:center;justify-content:center;z-index:10001}
.ar-inner{background:#fff;padding:12px;border-radius:12px;max-width:720px;width:92%}
.preset-btn.selected, .preset-btn:focus { background:#1e90ff !important; color:white !important; }
.preset-btn { transition: all .15s ease; padding:8px 12px; border-radius:8px; border:1px solid #cfe; background:white; cursor:pointer; }
.integrated-task-card .button { background:#1e90ff; color:white; border:none; padding:8px 12px; border-radius:8px; }
#add-task-result { margin-top:8px; }
.phone { margin: 0 auto; } /* center phone */
.container { display:flex; justify-content:center; align-items:flex-start; padding:24px; }
.bottom-nav { position: fixed; left: 50%; transform: translateX(-50%); bottom: 12px; display:flex; gap:24px; background: #fff; padding:10px 18px; border-radius:12px; box-shadow:0 6px 18px rgba(0,0,0,0.06); }
