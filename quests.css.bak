/* Quest Category Styling */
.quest-category {
    border-radius: 12px;
    padding: 16px;
    margin: 12px 0;
}

.daily-quests-category {
    background: linear-gradient(135deg, #a8d5e5 0%, #7ec9e3 100%);
    color: #fff;
    border: 2px solid #5ba4c9;
}

.daily-quests-category h2 {
    margin: 0 0 12px 0;
    font-size: 20px;
    font-weight: 700;
    color: #fff;
}

.main-missions-category {
    background: linear-gradient(135deg, #a8d89a 0%, #7fbe6b 100%);
    color: #fff;
    border: 2px solid #5f9d4f;
}

.main-missions-category h2 {
    margin: 0 0 12px 0;
    font-size: 20px;
    font-weight: 700;
    color: #fff;
}

.side-quests-category {
    background: linear-gradient(135deg, #7fd8d8 0%, #4db8c4 100%);
    color: #fff;
    border: 2px solid #2a9ca4;
}

.side-quests-category h2 {
    margin: 0 0 12px 0;
    font-size: 20px;
    font-weight: 700;
    color: #fff;
}

.quest-item {
    background: rgba(255, 255, 255, 0.95) !important;
    border-left: 4px solid;
}

.daily-quests-category .quest-item {
    border-left-color: #5ba4c9;
    color: #111;
}

.main-missions-category .quest-item {
    border-left-color: #5f9d4f;
    color: #111;
}

.side-quests-category .quest-item {
    border-left-color: #2a9ca4;
    color: #111;
}

/* Task card styling with priority badges and timestamps */
.task-card {
    background: white;
    border-radius: 12px;
    padding: 14px 12px;
    margin-bottom: 12px;
    box-shadow: 0 2px 8px rgba(16, 24, 40, 0.04);
    position: relative;
}

.task-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
}

.task-card-title {
    font-weight: 700;
    font-size: 16px;
    color: #111;
    flex: 1;
    word-break: break-word;
}

.task-priority-badge {
    padding: 4px 10px;
    border-radius: 8px;
    font-size: 12px;
    font-weight: 600;
    white-space: nowrap;
    margin-left: 8px;
}

.badge-high {
    background: #ffd4d6;
    color: #c41c1c;
}

.badge-medium {
    background: #fff4d6;
    color: #c9b200;
}

.badge-low {
    background: #d4ead4;
    color: #1f5e1f;
}

.task-timestamp {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 13px;
    color: #999;
    margin-bottom: 10px;
}

.task-timestamp-icon {
    font-size: 14px;
}

.task-action-btn {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 8px;
    background: white;
    color: #333;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
}

.task-action-btn:hover {
    background: #f5f5f5;
}
