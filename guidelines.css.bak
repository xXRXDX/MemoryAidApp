.terms-card {
    background: rgba(255,255,255,.8);
    border-radius: 18px;
    padding: 16px;
    width: 94%;
    height: 360px;
    overflow-y: auto;
    font-size: 14px;
    line-height: 18px;
    margin-bottom: 12px;
}

.terms-checkbox {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 15px;
}

#continueBtn:disabled {
    background: gray;
    pointer-events: none;
}
